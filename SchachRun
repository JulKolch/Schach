package schach;

import java.util.Scanner;

public class SchachRun {
    static Scanner scanner = new Scanner(System.in);
    public static void main(String[] args) {

        SchachGame.preparation();
        SchachGame.ausgabe();

        System.out.println("Spieler 1:");
        System.out.println("Welche Figur mÃ¶chten sie bewegen?");
        System.out.print("> ");
        String figure = scanner.next();
        System.out.println("Wochin wollen Sie gehen?");
        String move = scanner.next();

        if (SchachGame.checkMove(move) && Figure.moveIsPossible(move, figure)){
            SchachGame.makeMove(figure, move);
            SchachGame.ausgabe();
        }
        else System.out.println("Falsche Eingabe!");
    }
}
